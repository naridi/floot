<% @title = "Sign up | Floot" %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-7 col-md-6 col-xs-12">

          <h1 class="static-page-header text-center">Sign up</h1>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
          
          <div class="text-center">
            <div class="form-group">
              <%= f.text_field :name, placeholder: "Name", class: "form-control", autofocus:true %>
            </div>
            
         <!--   <div class="form-group">
              <%#= f.text_field :username, placeholder: "Username", class: "form-control" %>
            </div> -->
            
            <div class="form-group input-group">
              <span class="input-group-addon" id="basic-addon3">floot.cc/</span>
              <%= f.text_field :username, placeholder: "Username", class: "form-control", id: "basic-url" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
            </div>
          
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "off" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Create", class: "btn btn-primary form-control" %>
            </div>
            
          <% end %>
          
          <br />Already have an account? <%= render "devise/shared/links" %>
            </div>
          </div>

          <div class="col-sm-5 hidden-xs sign-up">
            <h2>We're excited to have you join.</h2><br />
            <ul style="text-align:left; font-size: 18px; list-style-type: circle;">
              <li>All posts disappear in 16 hours.</li>
              <li>Share thoughts in the moment.</li>
              <li>Discover and rank floots.</li>
            </ul>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>
