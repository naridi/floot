<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-4 col-centered">
    <div class="panel panel-default">
      <div class="panel-body">

          <h1 class="static-page-header text-center">Log in</h1>
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="text-center">
            <div class="form-group">
              <%= f.email_field :email, placeholder: "Email", class: "form-control", autofocus:true  %>
            </div>
      
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "off" %>
            </div>
          </div>
          
          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          
          <div class="text-center">
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary form-control" %>
            </div>
          <% end %>

          <br /><%= render "devise/shared/links" %>
          </div>
          
      </div>
    </div>
  </div>
</div>
