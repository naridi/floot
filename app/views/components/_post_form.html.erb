<% if user_signed_in? %>
  <div class="panel panel-default post-form-panel">
    <div class="panel-body row">
      
      <div class="col-sm-1">
        <%= image_tag(current_user.avatar.url(:thumb), :class => "avatar_post_form") %>
      </div>
      <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>
        
              <div class="field" style="margin-left: 10px;">
                <%= f.text_area :content, rows: 3, :placeholder => 'Whatâ€™s on your mind?', autofocus: true, class: "form-control" %>
                <span type="button" class="btn btn-submit post-form-button"><%= f.submit "Post", class: "btn btn-primary" %></span>
              </div>
          
        <% end %>
      </div>
    </div>
  </div>
<% end %>