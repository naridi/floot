<% if user_signed_in? %>
  <div class="profile_post">
    <div class="row">
        <%= form_for(@newPost) do |f| %>
              <div class="col-xs-12 profile_post_field">
                <%= f.text_area :content, rows: 3, :placeholder => 'Whatâ€™s on your mind?', autofocus: true, class: "form-control max counter" %>
                <span type="button" class="btn btn-submit profile_post_button"><%= f.submit "Post", class: "btn btn-primary" %></span>
                <span class="countdown"></span>
              </div>
        <% end %>
    </div>
  </div>
  
  <script>
  // for blocking writing
  jQuery(document).ready(function($) {
      var max = 321;
      $('textarea.max').keypress(function(e) {
          if (e.which < 0x20) {
              // e.which < 0x20, then it's not a printable character
              // e.which === 0 - Not a character
              return;     // Do nothing
          }
          if (this.value.length == max) {
              e.preventDefault();
          } else if (this.value.length > max) {
              // Maximum exceeded
              this.value = this.value.substring(0, max);
          }
      });
  }); //end if ready(fn)
  
  // for character counter 
  
  function updateCountdown() {
      // 140 is the max message length
      var remaining = 321 - jQuery('.counter').val().length;
    //  jQuery('.countdown').text(remaining + ' characters remaining.');
      jQuery('.countdown').text(remaining + '');
  
  }
  
  jQuery(document).ready(function($) {
      updateCountdown();
      $('.counter').change(updateCountdown);
      $('.counter').keyup(updateCountdown);
  });
  </script>
  
<% end %>
