        <% if @posts.each do |p| %>
        <div class="arrow-up"></div>
        <div class="panel panel-default post-panel">
            <div class="panel-heading heading">
                <%= image_tag(p.user.avatar.url(:thumb), :class => "avatar_post") %>
                <span class="post-title"><span class="post-owner"><a href="/<%= User.find(p.user_id).username %>"><%= User.find(p.user_id).name %></a></span>
                <span class="post-creation"><%= time_ago_in_words(p.created_at).gsub('about','') + ' ago' %></span></span>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <p class="post-content"><%= p.content %></p>
                    <% if current_user == p.user %><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %><% end %>
                </div>
            </div>
        </div>
        <% end.empty? %>
            <div class="alert alert-empty" role="alert">
                <% for user in @users %><%= user.name %><% end %> has not posted any Floots in the past 24 hours.
            </div>
        <% end %>
    </div>
    
