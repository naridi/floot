<div class="row">
    
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>user</p>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <p>trends</p>
            </div>
        </div>
    </div>
    
    <div class="col-xs-6">
        <% if @posts.each do |p| %>
        <div class="arrow-left"></div>
        <div class="panel panel-default post-panel">
            <div class="panel-heading heading">
                <%= image_tag(p.user.avatar.url(:thumb), :class => "avatar_post") %>
                <span class="post-title"><span class="post-owner"><a href="/<%= User.find(p.user_id).username %>"><%= User.find(p.user_id).name %></a></span>
                <span class="post-creation"><%= time_ago_in_words(p.created_at).gsub('about','') + ' ago' %></span></span>
            </div>
            <div class="panel-body">
                <div class="col-sm-12">
                    <p class="post-content"><%= p.content %></p>
                    <% if current_user == p.user %><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %><% end %>
                </div>
            </div>
        </div>
        <% end.empty? %>
            <div class="alert alert-empty" role="alert">No Floots posted in the past 24 hours.</div>
        <% end %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
            <div class="col-sm-12">
            <center><a href="#top"><p style="opacity: .7;">Back to top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
            </div>
          </div>
        </div>
    </div>
    
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>about</p>
            </div>
        </div>
    </div>
    
</div>